---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Rules', url: '../' },
  { name: 'Schedule', url: '../' },
  {
    name: 'FAQs',
    url: '../',
  },
  { name: 'Login', url: 'https://docs.astro.build/en/guides/rss/' },
];
---

<Layout
  title='Home'
  pageTitle='LogicLooM 4.0 |Â Home'
  description='Welcome to LogicLooM, the most celebrated technical event at Paradox, the annual flagship techno-cultural fest for IIT Madras BS students'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About LogicLooM</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Exploring the best of <a
                class='text-white'
                target='_blank'
                href='https://astro.build/'>Technicals</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              The final edition of LogicLooM, the most celebrated technical event at Paradox, the annual flagship techno-cultural fest for IIT Madras BS students
            </p>
            <Button target={'_self'} href='/template-25/blog/'>
              Check out more &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Important Links
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Workshops
          </h2>
          <p class='poppins'>
           Whether you're new to the field or already have some understanding, these sessions led by top experts from academia and industry 
will offer an immersive learning experience, packed with industry insights and practical knowledge.
          </p>
        </Card>
      </div>
    </section>
  <!--<RecentBlogPosts />-->
  </main>
</Layout>
