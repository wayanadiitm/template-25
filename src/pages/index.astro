---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Rules', url: '../' },
  { name: 'Schedule', url: '../' },
  {
    name: 'FAQs',
    url: '../',
  },
];
---

<Layout
  title='Home'
  pageTitle='LogicLooM 4.0 | Paradox 2025'
  description='Welcome to LogicLooM, the most celebrated technical event at Paradox, the annual flagship techno-cultural fest for IIT Madras BS students'
>
  <main class='bg-pink p-6'>
  <MobileSocials />
    <section id='about' class='grid grid-cols-1 md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About LogicLooM</h2>
      <div class='col-span-full md:col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-4xl lg:text-6xl'>
              Exploring the best of <a
                class='text-white'
                target='_blank'
                href='https://astro.build/'>Technicals</a
              > <img src='/template-25/success.webp' height='50' width='50'>
            </p>
            <p class='mt-2 outfit text-xl md:text-2xl lg:text-4xl'>
              The final edition of LogicLooM, the most celebrated technical event at Paradox, the annual flagship techno-cultural fest for IIT Madras BS students
            </p>
            <Button target={'_self'} href='/template-25/blog/'>
              Check out more &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-full md:col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Important Links
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>

<div class="col-span-full md:col-span-2">
  <Card>
    <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
     Timeline
    </h2>
<p class='poppins'>May - June 2025 • Hybrid</p>
    <div
      class="poppins overflow-y-auto max-h-96 border-t-2 border-black mt-3 p-4"
      style="scrollbar-width: thin; scrollbar-color: black transparent;"
    >
      <ul class="space-y-6">
        <li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              May 10
            </div>
            <span>Prelims begins</span>
          </div>
          <p class="text-gray-600 ml-12">  
          </p>
        </li>
        <li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              May 11
            </div>
            <span>Online Workshop 1</span>
          </div>
          <p class="text-gray-600 ml-12">
          </p>
        </li>
        <li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              May 18
            </div>
            <span>Round 2</span>
          </div>
          <p class="text-gray-600 ml-12">
          </p>
        </li>
        <li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              May 25
            </div>
            <span>Pre-finale</span>
          </div>
          <p class="text-gray-600 ml-12">
          </p>
        </li>
        <li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              May 30
            </div>
            <span>Online Workshop 2</span>
          </div>
          <p class="text-gray-600 ml-12">
          </p>
        </li>
<li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              Jun 05
            </div>
            <span>Workshop 3 (on-campus)</span>
          </div>
          <p class="text-gray-600 ml-12">
          </p>
        </li>
<li>
          <div class="flex items-center">
            <div class="bg-black text-white text-sm font-bold py-1 px-3 rounded-md mr-4">
              Jun 06
            </div>
            <span>Finale (on-campus), event concludes</span>
          </div>
          <p class="text-gray-600 ml-12">
          </p>
        </li>
      </ul>
    </div>
  </Card>
</div>

      <div class='col-span-full md:col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Workshops
          </h2>
          <p class='poppins'>
           Whether you're new to the field or already have some understanding, these sessions led by top experts from academia and industry 
will offer an immersive learning experience, packed with industry insights and practical knowledge.
          </p>
        </Card>
      </div>

<div class="col-span-full">
  <Card>
    <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
      FAQs
    </h2>
    <div class="space-y-4">
      <!-- Accordion Item 1 -->
      <div class="border-b border-gray-300 pb-4">
        <button
          class="w-full text-left flex justify-between items-center poppins text-lg md:text-xl"
          onclick="toggleAccordion('faq1')"
        >
          <span>What is LogicLooM?</span>
          <span id="icon-faq1">+</span>
        </button>
        <div id="faq1" class="hidden mt-2 text-gray-600">
          LogicLooM is the final edition of the celebrated technical event held at Paradox 2025, a flagship fest for IIT Madras BS students.
        </div>
      </div>

      <!-- Accordion Item 2 -->
      <div class="border-b border-gray-300 pb-4">
        <button
          class="w-full text-left flex justify-between items-center poppins text-lg md:text-xl"
          onclick="toggleAccordion('faq2')"
        >
          <span>Who can participate?</span>
          <span id="icon-faq2">+</span>
        </button>
        <div id="faq2" class="hidden mt-2 text-gray-600">
          Students, professionals, and enthusiasts from any field can participate in LogicLooM events.
        </div>
      </div>

      <!-- Accordion Item 3 -->
      <div class="border-b border-gray-300 pb-4">
        <button
          class="w-full text-left flex justify-between items-center poppins text-lg md:text-xl"
          onclick="toggleAccordion('faq3')"
        >
          <span>What are the prizes?</span>
          <span id="icon-faq3">+</span>
        </button>
        <div id="faq3" class="hidden mt-2 text-gray-600">
          Attractive prizes and certificates will be awarded to winners in various categories.
        </div>
      </div>
    </div>
  </Card>
</div>
<script>
  function toggleAccordion(id) {
    const content = document.getElementById(id);
    const icon = document.getElementById(`icon-${id}`);
    if (content.classList.contains("hidden")) {
      content.classList.remove("hidden");
      icon.textContent = "-";
    } else {
      content.classList.add("hidden");
      icon.textContent = "+";
    }
  }
</script>

    </section>
  <!--<RecentBlogPosts />-->
  </main>
</Layout>
