---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const crewMembers = [
  { name: 'Somsubhra De', role: 'Lead Organizer', image: 'path_to_image.jpg', bio: 'Passionate about tech and community.' },
  { name: 'Advait Vats', role: 'Co-Organizer', image: 'path_to_image2.jpg', bio: 'Loves coding and solving problems.' },
  { name: 'Sayan Bhowmick', role: 'Organizer', image: 'path_to_image3.jpg', bio: 'Enthusiastic about tech, and helping others grow.' },
  { name: 'TBU', role: 'Advisory Committee', image: 'path_to_image4.jpg', bio: 'To Be Updated.' }
];
---

<Layout
  title='Program Committee'
  pageTitle='LogicLooM 4.0 |Â Program Committee'
  description='Welcome to LogicLooM, the most celebrated technical event at Paradox, the annual flagship techno-cultural fest for IIT Madras BS students'
>
<main class="bg-pink p-6">
  <section id="about" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8 mt-4">
    {crewMembers.map((member) => (
      <div class="relative flex justify-center items-center" key={member.name}>
        <Card class="overflow-hidden shadow-lg rounded-lg w-full h-full p-4 hover:scale-105 transition-transform duration-300 ease-in-out">
          <img src={member.image} alt={member.name} class="w-32 h-32 rounded-full object-cover mx-auto -mt-16 mb-4 shadow-xl" />
          <h3 class="text-xl text-center font-semibold">{member.name}</h3>
          <p class="text-center text-gray-600 mt-2">{member.role}</p>
          <p class="text-center text-gray-600 mt-2">{member.bio}</p>
          <button class="mt-4 text-center text-pink-600 hover:text-pink-800 transition-all duration-300">View More</button>
        </Card>
      </div>
    ))}
  </section>
</main>
</Layout>
