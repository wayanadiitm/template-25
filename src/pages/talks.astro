---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const Speakers = [
  { name: 'Piyush Wairale', role: 'Teaching Fellow', image: 'https://wayanadiitm.github.io/ml/events/logicloom2/storage/piyushsir2.PNG', bio: '', topic: '' },
  { name: 'Jyothi Krishnan', role: 'Assnt Prof', image: 'https://wayanadiitm.github.io/ml/events/logicloom2/storage/jk.png', bio: '', topic: '' },
];
---

<Layout
  title='Program Committee'
  pageTitle='LogicLooM 4.0 |Â Workshops'
  description='Welcome to LogicLooM, the most celebrated technical event at Paradox, the annual flagship techno-cultural fest for IIT Madras BS students'
>
<main class="bg-pink p-6">
  <section id="about" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8 mt-4">
<h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
        Distinguished Speakers
      </h2>
    {Speakers.map((speaker) => (
      <div class="relative flex justify-center items-center" key={speaker.name}>
        <Card class="overflow-hidden shadow-lg rounded-lg w-full h-full p-4 hover:scale-105 transition-transform duration-300 ease-in-out">
          <img src={speaker.image} alt={speaker.name} class="w-32 h-32 rounded-full object-cover mx-auto -mt-16 mb-4 shadow-xl grayscale" />
          <h3 class="text-xl text-center font-semibold">{speaker.name}</h3>
          <p class="text-center text-gray-600 mt-2">{speaker.role}</p>
          <p class="text-center text-gray-600 mt-2">{speaker.bio}</p>
          <button class="mt-4 text-center text-pink-600 hover:text-pink-800 transition-all duration-300">View More</button>
        </Card>
      </div>
    ))}
  </section>
</main>
</Layout>
